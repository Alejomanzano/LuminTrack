@model LuminTrack.Models.Reporte

@{
    ViewBag.Title = "Eliminar Reporte";
}

<h2>¿Seguro que deseas eliminar este reporte?</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Descripción:</dt>
        <dd>@Model.Descripcion</dd>

        <dt>Categoría:</dt>
        <dd>@Model.Categoria</dd>

        <dt>Fecha:</dt>
        <dd>@Model.Fecha</dd>

        <dt>Estado:</dt>
        <dd>@Model.Estado</dd>

        <dt>Foto:</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.FotoURL))
            {
                <img src="@Url.Content(Model.FotoURL)" width="120" />
            }
            else
            {
                <span>No hay foto</span>
            }
        </dd>
    </dl>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Reportes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-danger">Eliminar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
