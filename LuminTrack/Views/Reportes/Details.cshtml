@model LuminTrack.Models.Reporte

@{
    ViewBag.Title = "Detalles del Reporte";
}

<h2>Detalles del Reporte</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Descripción:</dt>
        <dd>@Model.Descripcion</dd>

        <dt>Categoría:</dt>
        <dd>@Model.Categoria</dd>

        <dt>Fecha:</dt>
        <dd>@Model.Fecha</dd>

        <dt>Prioridad IA:</dt>
        <dd>@Model.PrioridadIA</dd>

        <dt>Estado:</dt>
        <dd>@Model.Estado</dd>

        <dt>Latitud:</dt>
        <dd>@Model.Latitud</dd>

        <dt>Longitud:</dt>
        <dd>@Model.Longitud</dd>

        <dt>Foto:</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.FotoURL))
            {
                <img src="@Url.Content(Model.FotoURL)" width="150" />
            }
            else
            {
                <span>No hay foto</span>
            }
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
</p>
