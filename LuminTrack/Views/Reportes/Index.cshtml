@model IEnumerable<LuminTrack.Models.Reporte>

@{
    ViewBag.Title = "Lista de Reportes";
}

<h2>Lista de Reportes</h2>

<p>
    @Html.ActionLink("Crear nuevo reporte", "Create", "Reportes", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Categoría</th>
            <th>Fecha</th>
            <th>Prioridad IA</th>
            <th>Estado</th>
            <th>Foto</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.Categoria</td>
                <td>@item.Fecha</td>
                <td>@item.PrioridadIA</td>
                <td>@item.Estado</td>

                <td>
                    @if (!string.IsNullOrEmpty(item.FotoURL))
                    {
                        <img src="@Url.Content(item.FotoURL)" width="80" />
                    }
                    else
                    {
                        <span>No hay foto</span>
                    }
                </td>

                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

