@model LuminTrack.Models.OrdenTrabajo

<h2>Eliminar Orden de Trabajo</h2>

<p>¿Está seguro que desea eliminar esta orden?</p>

<dl class="dl-horizontal">
    <dt>Descripción</dt>
    <dd>@Model.Descripcion</dd>

    <dt>Estado</dt>
    <dd>@Model.Estado</dd>

    <dt>Técnico</dt>
    <dd>@Model.TecnicoAsignado</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button class="btn btn-danger" type="submit">Eliminar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
