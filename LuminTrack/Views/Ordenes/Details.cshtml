@model LuminTrack.Models.OrdenTrabajo

<h2>Detalles de Orden de Trabajo</h2>

<dl class="dl-horizontal">
    <dt>Descripción:</dt>
    <dd>@Model.Descripcion</dd>

    <dt>Fecha:</dt>
    <dd>@Model.FechaCreacion</dd>

    <dt>Estado:</dt>
    <dd>@Model.Estado</dd>

    <dt>Técnico Asignado:</dt>
    <dd>@Model.TecnicoAsignado</dd>

    <dt>Reporte ID:</dt>
    <dd>@Model.ReporteId</dd>

    <dt>Luminaria ID:</dt>
    <dd>@Model.LuminariaId</dd>

    <dt>Evidencia:</dt>
    <dd>
        @if (!string.IsNullOrEmpty(Model.FotoEvidenciaURL))
        {
            <img src="@Url.Content(Model.FotoEvidenciaURL)" width="150" />
        }
        else
        {
            <span>No hay evidencia</span>
        }
    </dd>
</dl>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
</p>


