@model IEnumerable<LuminTrack.Models.OrdenTrabajo>

<h2>Órdenes de Trabajo</h2>

<p>
    @Html.ActionLink("Crear Orden", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Técnico</th>
            <th>Reporte</th>
            <th>Luminaria</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td>@item.Estado</td>
                <td>@item.TecnicoEmail</td>
                <td>@item.ReporteId</td>
                <td>@item.LuminariaId</td>

                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

