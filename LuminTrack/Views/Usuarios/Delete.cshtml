@model LuminTrack.Models.Usuario

@{
    ViewBag.Title = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<h4>¿Estás seguro que deseas eliminar este usuario?</h4>

<hr />

<dl class="dl-horizontal">
    <dt>Nombre</dt>
    <dd>@Model.Nombre @Model.Apellido</dd>

    <dt>Email</dt>
    <dd>@Model.Email</dd>

    <dt>Rol</dt>
    <dd>@Model.Rol</dd>
</dl>

@using (Html.BeginForm("Delete", "Usuarios", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-danger">
        Sí, eliminar
    </button>

    @Html.ActionLink("Cancelar", "Index", null,
        new { @class = "btn btn-secondary" })
}

