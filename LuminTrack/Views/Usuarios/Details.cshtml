@model LuminTrack.Models.Usuario

<h2>Detalles del Usuario</h2>

<dl class="dl-horizontal">
    <dt>Nombre:</dt>
    <dd>@Model.Nombre</dd>

    <dt>Apellido:</dt>
    <dd>@Model.Apellido</dd>

    <dt>Email:</dt>
    <dd>@Model.Email</dd>

    <dt>Rol:</dt>
    <dd>@Model.Rol</dd>
</dl>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
</p>
