@{
    ViewBag.Title = "Inicio";
}

<div class="container mt-5">

    @if (!User.Identity.IsAuthenticated)
    {
        <!-- SIN SESIÓN -->
        <div class="text-center">
            <h1 class="display-4">Bienvenido a LuminTrack</h1>
            <p class="lead">
                Sistema de gestión de luminarias y mantenimiento urbano
            </p>

            @Html.ActionLink(
                "Iniciar Sesión",
                "Login",
                "Usuarios",
                null,
                new { @class = "btn btn-primary btn-lg mt-3" }
            )
        </div>
    }
    else
    {
        <!-- CON SESIÓN -->
        <div class="text-center">
            <h2>Panel Principal</h2>

            @if (Session["Rol"]?.ToString() == "Administrador")
            {
                <p class="lead">Seleccione una opción del menú superior</p>

                <div class="row mt-4">
                    <div class="col-md-3">
                        <a href="@Url.Action("Index","Reportes")" class="btn btn-dark w-100 mb-2">
                            Reportes
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Index","Luminarias")" class="btn btn-dark w-100 mb-2">
                            Luminarias
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Index","Ordenes")" class="btn btn-dark w-100 mb-2">
                            Órdenes
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Index","Usuarios")" class="btn btn-dark w-100 mb-2">
                            Usuarios
                        </a>
                    </div>
                </div>
            }
            else
            {
                <p class="lead">
                    Has iniciado sesión correctamente.
                </p>
            }
        </div>
    }

</div>
