@model LuminTrack.Models.Luminaria

<h2>Detalles de Luminaria</h2>

<dl class="dl-horizontal">
    <dt>Tipo:</dt>
    <dd>@Model.Tipo</dd>

    <dt>Latitud:</dt>
    <dd>@Model.Latitud</dd>

    <dt>Longitud:</dt>
    <dd>@Model.Longitud</dd>

    <dt>Potencia:</dt>
    <dd>@Model.Potencia W</dd>

    <dt>Panel Solar:</dt>
    <dd>@(Model.TienePanelSolar ? "Sí" : "No")</dd>

    <dt>Estado:</dt>
    <dd>@Model.Estado</dd>
</dl>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
</p>
