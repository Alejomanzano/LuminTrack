@{
    ViewBag.Title = "Panel del Ciudadano";
}

<style>
    .card-hover {
        transition: all 0.2s ease;
    }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,.2);
        }
</style>

<div class="container mt-5 text-center">
    <h2 class="mb-4">Panel del Ciudadano</h2>
    <p class="text-muted mb-4">
        Reporte problemas de iluminación en su comunidad
    </p>

    <div class="row justify-content-center">

        <div class="col-md-4">
            <a href="@Url.Action("Create","Reportes")"
               class="text-decoration-none">
                <div class="card card-hover bg-primary text-white">
                    <div class="card-body">
                        <h1>📝</h1>
                        <h5>Registrar Reporte</h5>
                        <p>
                            Informar luminarias dañadas o fallas
                        </p>
                    </div>
                </div>
            </a>
            <a href="@Url.Action("MisReportes", "Reportes")"
               class="btn btn-success w-100 p-4">
                Ver mis reportes
            </a>
        </div>

    </div>
</div>
